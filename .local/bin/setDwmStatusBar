#!/bin/sh

make_bar_string ()
{
    internal_battery_percentage=$(acpi -s | tail -n 1| sed 's;.*, \([[:digit:]]\+%\).*;\1;')
    date_time=$(date +'%a %b(%m)-%d-%Y %I:%M %p')

    xsetroot -name "$internal_battery_percentage $date_time"
}

make_bar_string
sleep "$(expr 61 - $(date +"%S"))s"

while true; do
    make_bar_string
	sleep 1m
done 
